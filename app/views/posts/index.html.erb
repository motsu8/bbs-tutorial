<h1>Hello Ruby</h1>

<div><%= link_to "新しい投稿", new_post_path %></div>

<ul>
  <% @posts.each do |post|%>
    <li>
      <h2><%= post.title%></h2>
      <h2><%= post.content%></h2>
      <span>
        <small><%= post.created_at%></small>
      </span>
      <div>
        <%= button_to "削除", post_path(post), method: :delete %>
        <%= link_to "編集", edit_post_path(post) %>
      </div>
    </li>
  <% end %>
</ul>